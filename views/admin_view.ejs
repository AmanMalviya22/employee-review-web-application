<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('_bootstrap_meta')%>
  <title>Admin View</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f8f9fa;
    }

    .container {
      width: 75%;
      margin: 50px auto;
    }

    .row {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 20px;
    }

    h1 {
      margin: 0;
    }

    .add-employee-btn {
      font-size: 14px;
      padding: 10px 15px;
      border: none;
      border-radius: 4px;
      background-color: #007bff;
      color: #fff;
      text-decoration: none;
    }

    .add-employee-btn:hover {
      background-color: #0056b3;
    }

    table {
      width: 100%;
      margin-bottom: 30px;
      border-collapse: collapse;
    }

    th,
    td {
      padding: 8px;
      border: 1px solid #ced4da;
    }

    th {
      background-color: #343a40;
      color: #fff;
      font-weight: bold;
      text-align: left;
    }

    td {
      text-align: center;
    }

    .btn-primary,
    .btn-danger {
      font-size: 14px;
      padding: 6px 12px;
      border: none;
      border-radius: 4px;
      color: #fff;
      text-decoration: none;
    }

    .btn-primary {
      background-color: #007bff;
    }

    .btn-danger {
      background-color: #dc3545;
    }

    .btn-primary:hover,
    .btn-danger:hover {
      opacity: 0.8;
    }

    .no-data {
      text-align: center;
    }
  </style>
</head>

<body>
  <% include('_header') %>

  <div class="container">
    <div class="row">
      <div class="col-6">
        <h1>Employees List</h1>
      </div>
      <div class="col-6 d-flex justify-content-end">
        <a href="/admin/add-employee" class="add-employee-btn">Add a new Employee</a>
      </div>
    </div>

    <% if(users.length > 0){ %>
    <div class="mt-3 mb-3">
      <table>
        <thead>
          <tr>
            <th scope="col">Index</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Admin</th>
            <th scope="col">Make Changes</th>
          </tr>
        </thead>
        <tbody>
          <% i=1; for(let user of users){ %>
          <tr>
            <td><%= i++ %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.isAdmin ? 'Yes' : 'No' %></td>
            <td>
              <a href="/admin/update/<%= user.id %>" class="btn btn-primary">Edit</a>
              <a href="/admin/delete/<%= user.id %>" class="btn btn-danger">Delete</a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <% } else { %>
    <div class="no-data">
      <h2>Nothing to show</h2>
    </div>
    <% } %>
  </div>
  <% include('_bootstrap_script')%>
</body>

</html>
